@using ePostOffice_5001.Models.Entity;
@model List<TBLUSER>
@{
    ViewBag.Title = "Users";
}
<br />
@using (Html.BeginForm("Users", "Users", FormMethod.Get))
{
    <p>
        <b>Customer Name Search:</b> @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}

<h2>List of current users are listed below;</h2>
<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Last Name</th>
            <th>DELETE</th>       
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th>@user.USERID</th>
                <td>@user.USERNAME</td>
                <td>@user.LASTNAME</td>
                <td><a href="Delete/@user.USERID" class="btn btn-danger">DELETE</a></td>
            </tr>
        }

    </tbody>


</table>

<a href="NewUser" class="btn btn-primary">ADD NEW CUSTOMER</a>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl2').DataTable();

</script>